<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_hyperlink_layout"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#F6EEC2">

    <TextView
        android:id="@+id/tv_hyperlink_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Please insert your hyperlink below:"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_hyperlink"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_hyperlink_description"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/bttn_add_hyperlink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_hyperlink"
        android:text="ADD" />
</RelativeLayout>